{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",

    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["es2020"],
    "types": ["node"],

    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
